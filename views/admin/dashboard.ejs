</head>
<%- include('../includes/header.ejs') %>

<main class="main">
    <% if(products.length > 0){ %>
        <% products.forEach(product => { %>
            <div class="card">
                <h1 class="card-title card-product"> <%= product.title  %> </h1>
                <h2 class="card-pric card-product"> <%=  product.price %> </h2>
                <div>
                    <a href="/edit-product/<% product._id %>?edit=true" class="btn">EDIT</a>
                    <form action="/admin/<% product._id %>">
                        <button type="submit" class="btn">DELETE</button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% }else{ %>
        <h1 class="msg">NO PRODUCT</h1>
        <% } %>
</main>
<%- include('../includes/end.ejs') %>
    